<h1>Editing Book</h1>
<%= form_with model: @book do |f| %>
 <div class= "edit1">
   <label>Title</label>
   <%= f.text_field :title %>
 </div>
 
 <div class= "edit2">
   <label>Body</label>
   <%= f.text_area :body %>
 </div>
 
 <%= f.submit "Update Book" %>
